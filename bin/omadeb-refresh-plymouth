#!/bin/bash

# Overwrite the user config for the Plymouth drive decryption and boot sequence with the Omadeb default and rebuild it.

sudo cp ~/.local/share/omadeb/default/plymouth/* /usr/share/plymouth/themes/omadeb/
sudo update-alternatives --install /usr/share/plymouth/themes/default.plymouth default.plymouth /usr/share/plymouth/themes/omadeb/omadeb.plymouth 100
sudo update-alternatives --set default.plymouth /usr/share/plymouth/themes/omadeb/omadeb.plymouth
