#!/bin/bash

# Remove preinstalled Omadeb applications (web apps, TUIs, and selected packages).
# This removes all web apps, TUIs, plus specific desktop applications.

if gum confirm "Are you sure you want to remove all preinstalled web apps, TUI wrappers, and desktop applications?"; then
  echo -e "Removing preinstalled Omadeb applications...\n"

  omadeb-webapp-remove-all
  omadeb-tui-remove-all

  omadeb-app-remove \
    spotify \
    libreoffice \
    xournalpp \
    pinta
fi