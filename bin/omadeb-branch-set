#!/bin/bash

# Set the branch for Omadeb's git repository.

if (($# == 0)); then
  echo "Usage: omadeb-branch-set [main|dev]"
  exit 1
else
  branch="$1"
fi

case "$branch" in
  "main") git -C $OMADEB_PATH switch main ;;
  "dev") git -C $OMADEB_PATH switch dev ;;
  *) echo "Unknown branch: $branch"; exit 1; ;;
esac
