#!/bin/bash

# Update all installed Omadeb themes by pulling the latest changes from their git repositories.

omadeb-refresh-theme

for dir in ~/.config/omadeb/themes/*/; do
  if [[ -d $dir ]] && [[ ! -L "${dir%/}" ]] && [[ -d "$dir/.git" ]]; then
    echo "Updating: $(basename "$dir")"
    git -C "$dir" pull
  fi
done
