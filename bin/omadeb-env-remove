#!/bin/bash

# omadeb-env-remove: Remove an environment variable for Omadeb in bashrc.
# Usage: omadeb-env-remove <VAR_NAME>

if (($# != 1)); then
  echo "Usage: omadeb-env-remove <VAR_NAME>"
  exit 1
fi

var_name="$1"

# Remove the environment variable from .bashrc
sed -i "/export $var_name=/d" ~/.bashrc

echo -e "You can apply the change by running:\n\n  source ~/.bashrc\n"