#!/bin/bash

# Launch the default editor as determined by $EDITOR (set via environment variable) or nvim as fallback.
# Starts suitable editors in a terminal window and otherwise as a regular application.

case "${EDITOR:-nvim}" in
nvim | vim | nano | micro | hx | helix | fresh)
  exec "$TERMINAL" -e "$EDITOR" "$@"
  ;;
*)
  exec "$EDITOR" "$@"
  ;;
esac
