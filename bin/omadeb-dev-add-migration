#!/bin/bash

# Creates a new Omadeb migration named after the unix timestamp of the last commit.
# Only intended for Omadeb developers.

cd ~/.local/share/omadeb
migration_file="$HOME/.local/share/omadeb/migrations/$(git log -1 --format=%cd --date=unix).sh"
touch $migration_file

if [[ "$1" != "--no-edit" ]]; then
  $EDITOR $migration_file
fi

echo $migration_file

