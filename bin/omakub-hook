#!/bin/bash

# Run a named hook, like post-update (available in ~/.config/omakub/hooks/post-update).

set -e

if [[ $# -lt 1 ]]; then
  echo "Usage: omakub-hook [name] [args...]"
  exit 1
fi

HOOK=$1
HOOK_PATH="$HOME/.config/omakub/hooks/$1"
shift

if [[ -f $HOOK_PATH ]]; then
  bash "$HOOK_PATH" "$@"
fi
