#!/bin/bash

# omadeb-theme-install: Install a new theme from a git repo for Omadeb/Omakasui.
# Usage: omadeb-theme-install <git-repo-url>

if [ -z "$1" ]; then
  echo -e "\e[32mSee https://omakasui.org/themes\n\e[0m"
  REPO_URL=$(gum input --placeholder="Git repo URL for theme" --header="")
else
  REPO_URL="$1"
fi

if [ -z "$REPO_URL" ]; then
  exit 1
fi

THEMES_DIR="$HOME/.config/omadeb/themes"
THEME_NAME=$(basename "$REPO_URL" .git | sed -E 's/^(omadeb|omakasui)-//; s/-theme$//')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Remove existing theme if present
if [ -d "$THEME_PATH" ]; then
  rm -rf "$THEME_PATH"
fi

# Clone the repo directly to ~/.config/omadeb/themes
if ! git clone "$REPO_URL" "$THEME_PATH"; then
  echo "Error: Failed to clone theme repo."
  exit 1
fi

# Apply the new theme with omadeb-theme-set
omadeb-theme-set $THEME_NAME
