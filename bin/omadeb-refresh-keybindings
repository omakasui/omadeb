#!/bin/bash

# Refresh the GNOME keybindings to Omadeb defaults.

# Backup current dconf (with timestamp) to avoid clobbering (Ex: omadeb.dconf.bak.1753817951)
dconf dump / > "$HOME/keybinding.dconf.bak.$(date +%s)"

# Execute installation GNOME Settings
source ~/.local/share/omadeb/install/config/gnome/hotkeys.sh
echo -e "\e[31mRefreshed keybindings from Omadeb defaults. Saved backup as keybinding.dconf.bak.*\e[0m"